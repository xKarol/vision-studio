---
import { routes } from "~/config/routes";
import { Newsletter } from "./newsletter";
import Container from "~/components/ui/Container.astro";
import { Button } from "./ui/button";
import { TextInput } from "./ui/text-input";
import DoodleText from "./ui/DoodleText.astro";
---

<Container
  as="footer"
  class="flex flex-col items-end justify-between space-y-12 pb-4 pt-12 sm:flex-row sm:space-y-0 sm:pb-12"
>
  <div class="w-full sm:max-w-sm">
    <h1 class="tracking-wides mb-2 text-sm uppercase">Newsletter</h1>
    <Newsletter client:visible>
      <TextInput type="text" placeholder="Enter your email" name="email" />
      <Button variant="outline" size="sm"> Subscribe </Button>
    </Newsletter>
  </div>

  <div
    class="flex w-full justify-center space-x-4 text-xs sm:justify-end [&_path]:!stroke-[red]"
  >
    <DoodleText as="a" href={routes.socials.INSTAGRAM}>INSTAGRAM</DoodleText>
    <DoodleText as="a" href={routes.socials.PINTEREST}>PINTEREST</DoodleText>
    <DoodleText as="a" href={routes.socials.FACEBOOK}>FACEBOOK</DoodleText>
  </div>
</Container>
