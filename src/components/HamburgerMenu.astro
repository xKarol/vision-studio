---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {}

const { class: className, ...rest } = Astro.props;
---

<button
  class="menu-line relative flex h-5 w-5 items-center justify-center py-4"
  class:list={[className]}
  aria-label="menu"
  aria-expanded="false"
  {...rest}
>
  <span></span>
</button>

<style>
  .menu-line span,
  .menu-line span::before,
  .menu-line span::after {
    background: white;
    content: "";
    position: absolute;
    left: 0;
    width: 100%;
    height: 1px;
    transform: rotate(180deg);
    transition: 0.5s ease-in-out;
  }

  .menu-line span::before {
    margin-top: -6px;
  }

  .menu-line span::after {
    margin-top: 6px;
  }

  .menu-line[aria-expanded="true"] span {
    background: transparent;
  }

  .menu-line[aria-expanded="true"] span::before {
    margin-top: 0;
    transform: rotate(45deg);
  }

  .menu-line[aria-expanded="true"] span::after {
    transform: rotate(-45deg);
    margin-top: 0;
  }
</style>
