---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"h1"> {
  size?: "normal" | "small";
  href?: string;
}

const { href, size = "normal", class: className, ...rest } = Astro.props;

const defaultProps: Props = {
  class: "uppercase font-serif text-3xl tracking-widest select-none",
  "class:list": [
    size === "normal" && "text-3xl",
    size === "small" && "text-2xl",
    className,
  ],
  ...(href && { href }),
  ...rest,
};

const Tag = href === undefined ? "h1" : "a";
---

<!-- @ts-expect-error -->
<Tag {...defaultProps}> Logo </Tag>
